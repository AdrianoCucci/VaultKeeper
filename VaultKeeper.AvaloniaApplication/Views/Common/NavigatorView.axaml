<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:VaultKeeper.AvaloniaApplication.Views.Common"
                    xmlns:system="using:System">

  <!--
  Additional resources
  Using Control Themes:
  https://docs.avaloniaui.net/docs/basics/user-interface/styling/control-themes
  Using Theme Variants:
  https://docs.avaloniaui.net/docs/guides/styles-and-resources/how-to-use-theme-variants
  -->

  <Design.PreviewWith>
    <StackPanel Width="400" Spacing="10">
      <StackPanel Background="{DynamicResource SystemRegionBrush}">
        <controls:NavigatorView>
          <controls:NavigatorView.ForRoutes>
            <x:String>A</x:String>
            <x:String>B</x:String>
            <x:String>C</x:String>
          </controls:NavigatorView.ForRoutes>
        </controls:NavigatorView>
      </StackPanel>
    </StackPanel>
  </Design.PreviewWith>

  <ControlTheme x:Key="{x:Type controls:NavigatorView}" TargetType="controls:NavigatorView">
    <Setter Property="Template">
      <ControlTemplate>
        <TransitioningContentControl Content="{TemplateBinding Content}"/>
      </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
