<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:VaultKeeper.AvaloniaApplication.Views.Common.Prompts"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:VaultKeeper.AvaloniaApplication.ViewModels.Common.Prompts"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VaultKeeper.AvaloniaApplication.Views.Common.Prompts.PromptView"
             x:DataType="vm:PromptViewModel">

  <Design.DataContext>
    <vm:PromptViewModel Header="Prompt" Message="This is a prompt message."/>
  </Design.DataContext>

  <local:Prompt Header="{Binding Header}"
                Message="{Binding Message}"
                Content="{Binding Content}"
                ContentMinWidth="{Binding ContentMinWidth}"
                ContentMaxWidth="{Binding ContentMaxWidth}"
                ContentMinHeight="{Binding ContentMinHeight}"
                ContentMaxHeight="{Binding ContentMaxHeight}"
                ShowOkButton="{Binding ShowOkButton}"
                Acknowledged="Prompt_Acknowledged"/>
</UserControl>
