<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:common="using:VaultKeeper.AvaloniaApplication.Views.Common"
             xmlns:confirmprompts="using:VaultKeeper.AvaloniaApplication.ViewModels.Common.ConfirmPrompts"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VaultKeeper.AvaloniaApplication.Views.Common.ConfirmPrompts.DeleteGroupConfirmPromptView"
             x:DataType="confirmprompts:DeleteGroupConfirmPromptViewModel">
  <Design.DataContext>
    <x:Static Member="confirmprompts:DeleteGroupConfirmPromptViewModel.Design"/>
  </Design.DataContext>

  <StackPanel Spacing="10">
    <Grid RowDefinitions="Auto" ColumnDefinitions="*, Auto">
      <TextBlock Text="{Binding Header}"
                 Margin="0"
                 Classes="h3"
                 VerticalAlignment="Center"
                 Grid.Column="0"/>
      <common:AppButton IconStart="{StaticResource IconX}"
                        Width="40"
                        Height="40"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Classes="btn-text"
                        Click="CancelButton_Clicked"
                        Grid.Column="1"
                        ToolTip.Tip="Cancel"/>
    </Grid>

    <ScrollViewer>
      <StackPanel Spacing="20">

        <TextBlock Text="{Binding Message}"/>

        <Grid RowDefinitions="Auto" ColumnDefinitions="*, *" ColumnSpacing="10" Margin="0 10 0 0">
          <Button Padding="20"
                  HorizontalAlignment="Stretch"
                  Classes.btn-text="{Binding DeleteWithChildren}"
                  Click="KeepChildrenButton_Click"
                  Grid.Column="0">
            <StackPanel>
              <TextBlock Classes="h4" HorizontalAlignment="Center">Keep Keys</TextBlock>

              <StackPanel Spacing="10" Margin="0 0 0 20">
                <Border Background="Crimson" Height="20" Margin="20 0 0 0" CornerRadius="4"/>
                <Border Background="Green" Height="10" CornerRadius="4"/>
                <Border Background="Green" Height="10" CornerRadius="4"/>
                <Border Background="Green" Height="10" CornerRadius="4"/>
              </StackPanel>

              <TextBlock TextAlignment="Center" FontWeight="SemiBold">All keys in this group will be moved outside of it.</TextBlock>
            </StackPanel>
          </Button>

          <Button Padding="20"
                  HorizontalAlignment="Stretch"
                  Classes.btn-text="{Binding !DeleteWithChildren}"
                  Click="DeleteChildrenButton_Click"
                  Grid.Column="1">
            <StackPanel>
              <TextBlock Classes="h4" HorizontalAlignment="Center">Delete Keys</TextBlock>

              <StackPanel Spacing="10" Margin="0 0 0 20">
                <Border Background="Crimson" Height="20" CornerRadius="4"/>
                <Border Background="Crimson" Height="10" Margin="20 0 0 0" CornerRadius="4"/>
                <Border Background="Crimson" Height="10" Margin="20 0 0 0" CornerRadius="4"/>
                <Border Background="Crimson" Height="10" Margin="20 0 0 0" CornerRadius="4"/>
              </StackPanel>

              <TextBlock TextAlignment="Center" FontWeight="SemiBold">All keys in this group will be deleted along with it.</TextBlock>
            </StackPanel>
          </Button>
        </Grid>

        <common:FormButtons Margin="0 20 0 0"
                            SubmitButtonText="Confirm"
                            Cancelled="CancelButton_Clicked"
                            Submitted="ConfirmButton_Clicked"/>

      </StackPanel>
    </ScrollViewer>


  </StackPanel>
</UserControl>
