<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:common="using:VaultKeeper.AvaloniaApplication.Views.Common"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:groups="using:VaultKeeper.AvaloniaApplication.ViewModels.Groups"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VaultKeeper.AvaloniaApplication.Views.Groups.GroupFormView"
             x:DataType="groups:GroupFormViewModel">

  <StackPanel>
    <Label Target="InputName">Name</Label>
    <TextBox Name="InputName" Text="{Binding Form.Name}"/>

    <ItemsControl ItemsSource="{Binding #InputName.(DataValidationErrors.Errors)}">
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding}" Margin="0 6 0 0" Foreground="Red"></TextBlock>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>

    <common:FormButtons Margin="0 20 0 0"
                        SubmitButtonText="Save"
                        IsSubmitButtonEnabled="{Binding !Form.HasErrors}"
                        Cancelled="FormButtons_Cancelled"
                        Submitted="FormButtons_Submitted"/>

  </StackPanel>
</UserControl>
