<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:VaultKeeper.AvaloniaApplication.Views.VaultItems"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:VaultKeeper.AvaloniaApplication.ViewModels.VaultItems"
             mc:Ignorable="d" d:DesignWidth="800"
             x:Class="VaultKeeper.AvaloniaApplication.Views.VaultItems.VaultItemShellView"
             x:DataType="vm:VaultItemShellViewModel"
             Background="Transparent"
             Classes.focused="{Binding IsFocused}"
             Classes.selectable="{Binding IsSelectable}"
             Classes.selected="{Binding IsSelected}">

  <Design.DataContext>
    <x:Static Member="vm:VaultItemShellViewModel.Design"/>
  </Design.DataContext>

  <UserControl.Styles>
    <Style Selector="Border#PART_Border">
      <Setter Property="BorderBrush" Value="{StaticResource ColorGray500}"/>
      <Setter Property="Transitions">
        <Transitions>
          <BrushTransition Property="BorderBrush" Duration="0:0:0:0.1"/>
        </Transitions>
      </Setter>
    </Style>

    <Style Selector="CheckBox#PART_SelectCheckBox">
      <Setter Property="Width" Value="0"/>
      <Setter Property="Opacity" Value="0"/>
      <Setter Property="Cursor" Value="Hand"/>
      <Setter Property="Transitions">
        <Transitions>
          <DoubleTransition Property="Opacity" Duration="0:0:0:0.1"/>
          <DoubleTransition Property="Width" Duration="0:0:0:0.1" Easing="CubicEaseInOut"/>
        </Transitions>
      </Setter>
    </Style>

    <Style Selector=".selectable Border#PART_Border, .selected Border#PART_Border">
      <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
    </Style>

    <Style Selector=".selectable CheckBox#PART_SelectCheckBox, .selected CheckBox#PART_SelectCheckBox">
      <Setter Property="Width" Value="28"/>
      <Setter Property="Opacity" Value="1"/>
    </Style>
  </UserControl.Styles>

  <Border Name="PART_Border" BorderThickness="0 0 0 1" Focusable="False" FocusAdorner="{x:Null}">
    <Grid RowDefinitions="Auto" ColumnDefinitions="Auto, *">
      <CheckBox Name="PART_SelectCheckBox"
                IsEnabled="{Binding IsSelectable}"
                IsChecked="{Binding IsSelected}"
                Grid.Column="0"/>

      <TransitioningContentControl Content="{Binding Content}" Grid.Column="1">
        <TransitioningContentControl.DataTemplates>
          <DataTemplate x:DataType="vm:VaultItemViewModel">
            <local:VaultItemView ActionInvoked="VaultItem_ActionInvoked"/>
          </DataTemplate>
          <DataTemplate x:DataType="vm:VaultItemFormViewModel">
            <local:VaultItemFormView ActionInvoked="VaultItem_ActionInvoked" FormActionInvoked="VaultItem_FormActionInvoked"/>
          </DataTemplate>
        </TransitioningContentControl.DataTemplates>
      </TransitioningContentControl>
    </Grid>
  </Border>
</UserControl>
