<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:VaultKeeper.AvaloniaApplication.ViewModels.VaultItems"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VaultKeeper.AvaloniaApplication.Views.VaultItems.VaultItemReadOnlyView"
             x:DataType="vm:VaultItemReadOnlyViewModel"
             >
  <Grid RowDefinitions="*" ColumnDefinitions="*, Auto">
    <TextBlock Text="{Binding Model.Name}" VerticalAlignment="Center" Grid.Column="0"></TextBlock>
    <SplitButton Click="ActionCopyValue_Click" Grid.Column="1" ToolTip.Tip="Copy Value">
      <PathIcon Data="{StaticResource IconCopy}"></PathIcon>
      <SplitButton.Flyout>
        <MenuFlyout Placement="BottomEdgeAlignedRight">
          <MenuItem Header="Copy name" Click="ActionCopyName_Click">
            <MenuItem.Icon>
              <PathIcon Data="{StaticResource IconCopy}"></PathIcon>
            </MenuItem.Icon>
          </MenuItem>
          <MenuItem Header="Copy value" Click="ActionCopyValue_Click">
            <MenuItem.Icon>
              <PathIcon Data="{StaticResource IconCopy}"></PathIcon>
            </MenuItem.Icon>
          </MenuItem>
          <Separator/>
          <MenuItem Header="Edit" Click="ActionEdit_Click">
            <MenuItem.Icon>
              <PathIcon Data="{StaticResource IconPen}"></PathIcon>
            </MenuItem.Icon>
          </MenuItem>
          <MenuItem Header="Group" Click="ActionGroup_Click">
            <MenuItem.Icon>
              <PathIcon Data="{StaticResource IconList}"></PathIcon>
            </MenuItem.Icon>
          </MenuItem>
          <Separator/>
          <MenuItem Header="Delete" Click="ActionDelete_Click">
            <MenuItem.Icon>
              <PathIcon Data="{StaticResource IconTrash}"></PathIcon>
            </MenuItem.Icon>
          </MenuItem>
        </MenuFlyout>
      </SplitButton.Flyout>
    </SplitButton>
  </Grid>
</UserControl>
